void clear()
{
    int i;
    i = 0;
    while (i < 100)
    {
        cout << "\n";
        i++;
    }
}

void drawArt()
{
    clear();
    cout << "    :)\n\n\n\n";
}

void main()
{
    int input;
    bool running;

    running = true;
    clear();
    while (running)
    {
        cout << "[1] Clear Screen\n";
        cout << "[2] End Program\n";
        cout << "[3] For Art\n";

        cin >> input;

        if (input != 0)
        {
            if (input == 1)
            {
                clear();
            }

            else
            {
                if (input == 2)
                {
                    clear();
                    running = false;
                }

                else
                {
                    drawArt();
                }
            }
        }
    }
}
